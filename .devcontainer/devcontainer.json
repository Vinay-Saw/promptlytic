{
  "name": "Promptlytics Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteEnv": {
    "OPENAI_API_KEY": "${{ secrets.OPENAI_SECRET_AIPIPE }}",
    "OPENAI_BASE_URL": "https://api.aipipe.ai/v1"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && python -m playwright install --with-deps chromium",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "vscode"
}
